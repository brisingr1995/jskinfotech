<h1 id="page_title">Courses</h1>

<div id="posts_wrapper">
	<section class="skinny_wrapper clearfix">
	<% @posts.each do |post| %>
		<div class="grid__item">
		<%= link_to(post) do %>
			<h2 class="title title--preview"><%= post.title %></h2>
			<div class="loader"></div>
			<span class="category"><%= post.created_at.strftime('%A, %B %d') %></span>
		<% end %>
		</div>
	<% end %>
	</section>
</div>


